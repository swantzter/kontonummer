{
  "name": "kontonummer",
  "version": "0.0.0-development",
  "description": "A validator for swedish banking numbers",
  "main": "dist/src/index.js",
  "scripts": {
    "test": "BABEL_ENV=test nyc -r lcov -r text -e .ts -x test/**/* mocha -r ts-node/register -r test/babel-register.js test/**/*.test.ts",
    "lint": "standardx --verbose **/*.{js,ts}",
    "build": "pika build",
    "semantic-release": "semantic-release"
  },
  "author": "Svante Bengtson <svante@swantzter.se> (https://swantzter.se)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.9.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-web": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "flowgen": "^1.10.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "pika-plugin-typedefs-to-flow": "0.0.2",
    "pika-plugin-unpkg-field": "^1.1.0",
    "semantic-release": "^17.0.4",
    "standardx": "^5.0.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-useless-constructor": "off",
      "@typescript-eslint/no-useless-constructor": "error",
      "no-dupe-class-members": "off",
      "@typescript-eslint/no-dupe-class-members": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/svbeon/kontonummer.git"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "test/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-types"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-bundle-web"
      ]
    ]
  },
  "keywords": [
    "banking",
    "bank account",
    "sorting code",
    "clearing number",
    "clearingnummer",
    "konto",
    "bankkonto",
    "format",
    "verify"
  ]
}
